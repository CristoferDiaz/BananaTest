<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<HBox fx:id="view" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <SplitPane dividerPositions="0.5" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="160.0" HBox.hgrow="ALWAYS">
        <items>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
               <children>
                  <HBox alignment="CENTER" maxHeight="-Infinity" prefWidth="200.0" spacing="5.0">
                     <children>
                        <Button fx:id="btCrear" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onCrearNuevaAction" text="Crear nueva pregunta">
                           <graphic>
                              <FontIcon iconColor="#05e41f" iconLiteral="fa-plus" iconSize="20" />
                           </graphic></Button>
                        <Button fx:id="btBorrar" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onBorrarAction" text="Borrar pregunta seleccionada">
                           <graphic>
                              <FontIcon iconColor="RED" iconLiteral="fa-trash-o" iconSize="20" />
                           </graphic></Button>
                     </children>
                  </HBox>
                  <TextField fx:id="tfBuscador" maxWidth="1.7976931348623157E308" promptText="Buscar pregunta existente" />
                  <ListView fx:id="lvPreguntas" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0">
              <items>
                  <TitledPane collapsible="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0" text="Editar pregunta">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                     <content>
                        <BorderPane fx:id="bpEditarPregunta" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                           <top>
                              <Button fx:id="btAplicarCambios" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onAplicarCambios" text="Aplicar Cambios" BorderPane.alignment="CENTER" />
                           </top>
                        </BorderPane>
                     </content>
                  </TitledPane>
                  <TitledPane collapsible="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0" text="Vista previa de la pregunta">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                     <content>
                        <VBox fx:id="vbVistaPrevia" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="100.0" />
                     </content>
                  </TitledPane>
              </items>
            </SplitPane>
        </items>
      </SplitPane>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</HBox>
