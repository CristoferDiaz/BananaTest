                     </graphic></MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" onAction="#onSalirAction" text="Cerrar">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="X" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                     <graphic>
                        <FontIcon iconColor="RED" iconLiteral="fa-times" iconSize="20" />
                     </graphic></MenuItem>
            </items>
               <graphic>
                  <FontIcon iconColor="#e8c23a" iconLiteral="fa-file" iconSize="20" />
               </graphic>
          </Menu>
          <Menu text="_Editar">
