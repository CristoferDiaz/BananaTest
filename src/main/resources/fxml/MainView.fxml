                        <FontIcon iconColor="#e8c23a" iconLiteral="fa-cogs" iconSize="20" />
                     </graphic></MenuItem>
            </items>
               <graphic>
                  <FontIcon iconColor="#e8c23a" iconLiteral="fa-edit" iconSize="20" />
               </graphic>
          </Menu>
          <Menu text="Ay_uda">
            <items>
              <MenuItem mnemonicParsing="false" text="Acerca de">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/logo/bananatest_logo_32.png" />
                           </image>
                        </ImageView>
                     </graphic></MenuItem>
            </items>
               <graphic>
                  <FontIcon iconColor="#e8c23a" iconLiteral="fa-info" iconSize="20" />
               </graphic>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
